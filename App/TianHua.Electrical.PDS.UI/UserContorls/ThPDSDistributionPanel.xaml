<UserControl x:Class="TianHua.Electrical.PDS.UI.UserContorls.ThPDSDistributionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="clr-namespace:HandyControl.Controls;assembly=HandyControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom"  FontSize="14">
            <TextBlock>进度</TextBlock>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <ProgressBar Width="100" Height="10" Value="50"></ProgressBar>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <TextBlock>正在计算回路电流:1321/2164</TextBlock>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <TextBlock>报错信息</TextBlock>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <TextBlock>0个错误信息</TextBlock>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <TextBlock>更新状态</TextBlock>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <Rectangle Fill="Yellow" Width="14" Height="14"></Rectangle>
                <TextBlock>未更新</TextBlock>
            </StackPanel>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <TextBlock>登录状态</TextBlock>
            <Separator Width="1"  HorizontalAlignment="Center"/>
            <TextBlock ><Hyperlink>已登录</Hyperlink>@thape.com.cn</TextBlock>
        </StatusBar>
        <Grid Width="950" Height="700">
            <Border BorderBrush="Black" BorderThickness="1"  Background="White" Margin="1,0,267,143">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas Background="Transparent" x:Name="canvas" Style="{x:Null}" Width="10000" Height="10000"></Canvas>
                </ScrollViewer>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Background="White" Margin="688,0,10,442">
                <TreeView x:Name="tv" ItemsSource="{Binding DataList}">
                    <!--<TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>-->
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding DataList}">
                            <TextBlock Text="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Background="White" Margin="688,263,10,143">
                <hc:PropertyGrid x:Name="propertyGrid" />
            </Border>
            <TextBox x:Name="tbxConsole" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Style="{x:Null}" Margin="0.684931506849315,571.597633136095,232.876712328767,4.97041420118343"></TextBox>
            <CheckBox Style="{x:Null}" Margin="733,595,127,85">浪涌保护器</CheckBox>
            <CheckBox Style="{x:Null}" Margin="731,572,121,105">消防电源监控</CheckBox>
            <CheckBox Style="{x:Null}" Margin="836,572,19,110">电气火灾监控</CheckBox>
            <ComboBox x:Name="cbx" Style="{x:Null}" Margin="833,595,30,84"></ComboBox>
            <Button Click="btnBalance" Style="{x:Null}" Margin="725,619,121,61">平衡相序</Button>
            <Button Click="btnSelectFast" Style="{x:Null}" Margin="837,621,10,59">快速选型</Button>
            <Button Click="btnGenMulti" Style="{x:Null}" Margin="725,644,119,36">批量生成</Button>
            <Button x:Name="btn" Click="btnGenSingle" Style="{x:Null}" Margin="836,646,8,34">单独生成</Button>
        </Grid>
    </DockPanel>
</UserControl>
