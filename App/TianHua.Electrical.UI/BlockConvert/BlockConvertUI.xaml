<cus:ThCustomWindow x:Class="TianHua.Electrical.UI.BlockConvert.BlockConvertUI"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:cus="clr-namespace:ThControlLibraryWPF.CustomControl;assembly=ThControlLibraryWPF"
                    xmlns:converters="clr-namespace:TianHua.Electrical.UI.BlockConvert"
                    SizeToContent="WidthAndHeight" mc:Ignorable="d" ResizeMode="NoResize" Title="天华提资转换"
                    Width="510" Height="400" HorizontalContentAlignment="Left" 
                    MinWidth="192" MinHeight="260" MaxHeight="400" MaxWidth="510" >
    <Window.Resources>
        <ResourceDictionary>
            <converters:CapitalOpsBooleanConverter x:Key="CapitalOpsConverter"/>
            <Style x:Key="TextStyle" TargetType="CheckBox">
                <Setter Property="FontSize" Value="20"></Setter>
            </Style>
            <Style x:Key="buttnStyle1" TargetType="Button">
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="Foreground" Value="Green"></Setter>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Height" Value="20"></Setter>
            </Style>
            <ContextMenu x:Key="ContextMenu">
                <MenuItem Name="Delete" Header="删除" Click="">
                    <!--<MenuItem.Icon/>-->
                </MenuItem>
                <MenuItem Name="Copy" Header="复制" Click="">
                    <!--<MenuItem.Icon/>-->
                </MenuItem>
                <MenuItem Name="Move" Header="移动" Click="">
                    <!--<MenuItem.Icon/>-->
                </MenuItem>
            </ContextMenu>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel Margin="3" Orientation="Horizontal">
        <StackPanel>
            <DataGrid Name="table1" AutoGenerateColumns="False" RowBackground="White" 
                  Background="White"  BorderThickness="1,1,1,1" ContextMenu="{StaticResource ContextMenu}"
                  ItemsSource="{Binding BlockConvertInfos,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                        <Setter Property="Background" Value="White"></Setter>
                        <Setter Property="Foreground" Value="Black"></Setter>
                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="BorderBrush" Value="#808080" />
                        <Setter Property="TextOptions.TextFormattingMode" Value="Display"></Setter>
                        <Setter Property="Height" Value="20"></Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="来源专业" Width="100" CanUserSort="False" CanUserResize="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <cus:InputTextBox IsReadOnly="True" TextBoxInputType="InputString" Height="20" VerticalAlignment="Stretch" Text="{Binding Major,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" TextAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="设备类型" Width="100" CanUserSort="False" CanUserResize="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <cus:InputTextBox IsReadOnly="True" TextBoxInputType="InputString" Height="20" VerticalAlignment="Stretch" Text="{Binding EquipmentType,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" TextAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="对比结果" Width="100" CanUserSort="False" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <cus:InputTextBox IsReadOnly="True" TextBoxInputType="InputString" Height="20" VerticalAlignment="Stretch" Text="{Binding CompareResult,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" TextAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Focusable="False" FocusManager.FocusedElement="{Binding ElementName=btnBlockConvert}">            
            <Border Margin="3,0,0,0" Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="3">
                <StackPanel >
                    <CheckBox x:Name="chkHavcEquipBlockConvert" Margin="3,5" Content="暖通设备提资转换" IsThreeState="False"
                      IsChecked="{Binding HavcOps,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                    <CheckBox x:Name="chkWssEquipBlockConvert" Margin="3,5" Content="给排水设备提资转换" IsThreeState="False"
                      IsChecked="{Binding WssOps,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                </StackPanel>
            </Border>
            <Border Margin="3,3,0,0" Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="3" >
                <StackPanel >
                    <RadioButton x:Name="wssConvertStrongEquip" Content="转换所有强电设备" GroupName="Wss" Margin="3,5" IsThreeState="False"
                         IsChecked="{Binding EquipOps,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,
                Converter={StaticResource CapitalOpsConverter},ConverterParameter=0}" Checked="wssConvertStrongEquip_Checked"></RadioButton>
                    <RadioButton x:Name="wssConvertWeakEquip" Content="转换所有弱电设备" GroupName="Wss" Margin="3,5" IsThreeState="False"
                         IsChecked="{Binding EquipOps,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,
                Converter={StaticResource CapitalOpsConverter},ConverterParameter=1}" Checked="wssConvertWeakEquip_Checked"></RadioButton>
                    <RadioButton x:Name="wssConvertAllEquip" Content="转换所有设备" GroupName="Wss" Margin="3,5" IsThreeState="False"
                         IsChecked="{Binding EquipOps,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,
                Converter={StaticResource CapitalOpsConverter},ConverterParameter=2}" Checked="wssConvertAllEquip_Checked"></RadioButton>
                </StackPanel>
            </Border>
            <Border Margin="3,3,0,0" Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="3">
                <StackPanel >
                    <CheckBox x:Name="convertManualActuator" Margin="3,5" Content="转换排烟阀手动执行机构" IsThreeState="False"
                      IsChecked="{Binding ManualActuatorOps,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                </StackPanel>
            </Border>
            <Border Margin="3,3,0,0" Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="3">
                <StackPanel Orientation="Horizontal">
                    <Label Content="负载标注样式" Height="24"></Label>
                    <ComboBox Margin="5,0" Name="cbBlkFrame" Width="90" Height="20" HorizontalAlignment = "Right"
                      ItemsSource="{Binding BlkFrames,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      Text="{Binding BlkFrame,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                </StackPanel>
            </Border>
            <Border Margin="3,3,0,0" Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="3">
                <StackPanel Orientation="Horizontal">
                    <Label Content="图块比例    " Height="24"></Label>
                    <ComboBox Margin="15,0" Name="cbBlkScale" Width="90" Height="20" HorizontalAlignment = "Right"
                      ItemsSource="{Binding BlkScales,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      Text="{Binding BlkScale,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                </StackPanel>
            </Border>
            <Border Margin="3,3,0,0" Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="3">
                <StackPanel Orientation="Vertical">
                    <Label Content="对比容差：" Height="24"></Label>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="忽略小于" Height="24"/>
                        <TextBox x:Name="tbCompareTolerance" Width="50" Height="18" 
                                 Text="{Binding CompareTolerance,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        <Label Content="mm位移" Height="24"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Button Margin="3,5,0,0" x:Name="btnUpdateCompare" Content="更新比对" Height="20" 
                    Style="{StaticResource buttnStyle1}" Click="btnUpdateCompare_Click"></Button>
            <Button Margin="3,5,0,0" x:Name="btnBlockConvert" Content="提资转换" Height="20"
                    Style="{StaticResource buttnStyle1}" Click="btnBlockConvert_Click"></Button>
            <Button Margin="3,5,0,0" x:Name="btnSinglePointUpdate" Content="单点更新" Height="20" 
                    Style="{StaticResource buttnStyle1}" Click="btnSinglePointUpdate_Click"></Button>
            <Button Margin="3,5,0,0" x:Name="btnBlockUpdate" Content="提资更新" Height="20"
                    Style="{StaticResource buttnStyle1}" Click="btnBlockUpdate_Click"></Button>
        </StackPanel>
    </StackPanel>
    
</cus:ThCustomWindow>
