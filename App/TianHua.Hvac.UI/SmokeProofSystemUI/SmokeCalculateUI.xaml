<cus:ThCustomWindow x:Class="TianHua.Hvac.UI.SmokeProofSystemUI.SmokeCalculateUI"
                    xmlns:cus="clr-namespace:ThControlLibraryWPF.CustomControl;assembly=ThControlLibraryWPF"
                    xmlns:userCtrl="clr-namespace:TianHua.Hvac.UI.SmokeProofSystemUI.SmokeProofUserControl" 
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    Title="压力送风防烟计算" SizeToContent="Manual" 
                    Width="400" Height="700" MaxWidth="400" MaxHeight="700"
                    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="10,0,10,0" Visibility="Hidden">自然送风/机械送风：</Label>
        <ComboBox Grid.Row="1" Margin="10,0,10,0" Name="cbbPipeType" Visibility="Hidden"
                  SelectedItem="{Binding AirSupplySelectTableItem,Mode=TwoWay,NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="Title"
                  ItemsSource="{Binding AirSupplyTableItems,Mode=OneWay,NotifyOnSourceUpdated=True}" Height="22" VerticalAlignment="Top"></ComboBox>
        <Label Grid.Row="0" Margin="10,0,10,0" >应用场景：</Label>
        <ComboBox Grid.Row="1" Margin="10,0" 
                  SelectedItem="{Binding SelectTableItem,Mode=TwoWay,NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="Title"
                  ItemsSource="{Binding FunctionTableItems,Mode=OneWay,NotifyOnSourceUpdated=True}" Height="22" VerticalAlignment="Top" TabIndex="1"></ComboBox>
        <Label Grid.Row="2" Margin="10,0,10,0" >系统名称：</Label>
        <TextBox Name="txtSysName" Margin="10,0,10,0" Text="{Binding SystemName, Mode=TwoWay, UpdateSourceTrigger=LostFocus, NotifyOnSourceUpdated=True}" Grid.Row="3" Grid.Column="1" Height="22" TabIndex="2" AcceptsTab="False"/>
        <Border Grid.Row="4" Grid.Column ="1" BorderThickness="0" Margin="15,0,15,0">
            <ContentPresenter  Content="{Binding SelectTableItem.ShowUserControl}"/>
        </Border>
        <Grid Grid.Row="5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <cus:ImageButton Name="btnLayout" ImageTextLocation="TextOnly" Content="放置图块" Margin="5,0,5,5" TextMargin="5,0,5,0" Height="25" Width="80" Click="btnLayoutBlock_Click" VerticalAlignment="Bottom" />
            <cus:ImageButton Name="btnModify"  ImageTextLocation="TextOnly" Content="修改图块" Margin="5,0,5,5" TextMargin="5,0,5,0" Height="25" Width="80" Click="btnModify_Click" VerticalAlignment="Bottom" Visibility="Hidden"/>
            <cus:ImageButton Grid.Column="1" ImageTextLocation="TextOnly" Content="导出计算书" Margin="5,0,5,5" TextMargin="5,0,5,0" Height="25" Width="80" Click="btnExportButton_Click"  VerticalAlignment="Bottom" />
        </Grid>
    </Grid>
</cus:ThCustomWindow>